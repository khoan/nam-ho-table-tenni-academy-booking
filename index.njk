---js
{
  backendUrl: process.env.BACKEND_URL,
  announcement: process.env.ANNOUNCEMENT,
}
---
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking - Nam Ho Table Tennis Academy</title>
  <link rel="stylesheet" href="tachyons.css"/>
  <style>
input[type=checkbox]:checked+label,
input[type=radio]:checked+label {
  color: rgba(255,255,255,0.9);
  background-color: rgba(0,0,0,0.8);
}

#css-new_booking:checked ~ nav label[for="css-new_booking"],
#css-view_booking:checked ~ nav label[for="css-view_booking"] {
  color: rgba(0,0,0,.9);
}
#css-new_booking:checked ~ .css-new_booking,
#css-view_booking:checked ~ .css-view_booking {
  display: inherit;
}
.css-tab_content {
  display: none;
}
  </style>
</head>
<body>
  <main>
    <div class="ph4 ph5-m ph6-l">
      <div class="pv5 f4 f2-ns measure center">
        <h1 class="fw6 f1 fl w-100 black-70 mt0 mb3 avenir">NHTTA Booking</h1>

        {% if announcement %}
        <div class="f4 flex items-center justify-center pa4 bg-lightest-blue navy">
          <svg class="w1" data-icon="info" viewBox="0 0 32 32" style="fill:currentcolor">
            <title>info icon</title>
            <path d="M16 0 A16 16 0 0 1 16 32 A16 16 0 0 1 16 0 M19 15 L13 15 L13 26 L19 26 z M16 6 A3 3 0 0 0 16 12 A3 3 0 0 0 16 6"></path>
          </svg>
          <span class="lh-title ml3">{{ announcement }}</span>
        </div>
        {% endif %}

        <input id="css-new_booking" name="css-new_view" class="css-tab_control dn" type="radio">
        <input id="css-view_booking" name="css-new_view" class="css-tab_control dn" type="radio" checked>

        <nav class="mt4 mb2 bb b--black-10">
          <label for="css-new_booking" class="gray pointer dim b f4 mr3">New</label>
          <label for="css-view_booking" class="gray pointer dim b f4 mr3">View</label>
        </nav>

        <div class="css-tab_content css-new_booking">
          <form id="js-new_booking_form" action="{{ backendUrl }}" accept-charset="utf-8" method="POST">
            <input type="hidden" name="Action" value="create">

            <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
              <legend class="ph0 mh0 fw6 clip">New Booking</legend>
              <div class="mt4">
                <label class="db fw4 lh-copy f4 black-60" for="name">Your Name</label>
                <input class="pa2 input-reset ba bg-transparent b--black-40" type="text" name="name" id="name" required>
              </div>
              <div class="mt4">
                <label class="db fw4 lh-copy f4 black-60" for="contact">Your Contact Number</label>
                <input class="pa2 input-reset ba bg-transparent b--black-40" type="text" name="contact" id="contact" required>
              </div>
            </fieldset>
            <fieldset class="mt3 bn ph0">
              <legend class="f4 fw4 black-60">Date</legend>
              <div id="js-session_dates"></div>
            </fieldset>
            <fieldset class="mt3 bn ph0">
              <legend class="f4 fw4 black-60">Time</legend>
              <div id="js-session_times"></div>
            </fieldset>
            <div class="mt5">
              <input class="pointer dim ph4 pv2 mb2 dib white bg-dark-blue" type="submit" name="submit" value="Book">
            </div>
          </form>
        </div>

        <div class="css-tab_content css-view_booking">
          <form id="js-view_booking_form" action="{{ backendUrl }}" accept-charset="utf-8" method="POST">
            <input type="hidden" name="Action" value="show">

            <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
              <legend class="ph0 mh0 fw6 clip">View Booking</legend>
              <div class="mt4">
                <label class="db fw4 lh-copy f4 black-60" for="contact">Your Contact Number</label>
                <input class="pa2 input-reset ba bg-transparent b--black-40" type="text" name="contact" id="contact" required>
              </div>
            </fieldset>
            <div class="mt4">
              <input class="pointer dim ph4 pv2 mb2 dib white bg-dark-blue" type="submit" name="submit" value="Show">
            </div>
          </form>
          <div id="js-view_booking_result">
            <ul class="list pl0 measure">
              <li class="lh-copy pv3 ba bl-0 bt-0 br-0 b--dotted b--black-30">
                Da... Mon, 5 Oct 2020, 4pm - 6pm
              </li>
              <li class="lh-copy pv3 ba bl-0 bt-0 br-0 b--dotted b--black-30">
                Gr....ar Tue, 6 Oct 2020, 4pm - 6pm
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <div class="vh-75 cover bg-center" style="background-image: url(banner.jpg);"></div>
  </main>

  <footer class="pv4 ph3 ph5-m ph6-l mid-gray">
    <small class="f6 db tc">1/5 Clyde Street, Rydalmere, NSW, 2116</small>
    <div class="tc mt3">
      <a href="mailto:ssook6880@gmail.com" class="js-email mid-gray link dib dim ph2 pb1 lh-solid">
        <svg class="dib" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span class="dib fw6" style="font-size: 12px;">Sue</span>
      </a>
    </div>
  </footer>
  <script type="module">
    import SessionPickerApp from './sessionPickerApp.js';

    const SessionDictionary = {
      Mon: [16,18,20,22],
      Tue: [16,18,20,22],
      Wed: [16,18,20,22],
      Thu: [16,18,20,22],
      Fri: [16,18,20,22],
      Sat: [14,16,18],
      Sun: [14,16,18],
    };
    const advancedBookingDays = 2;

    const app = new SessionPickerApp({
      SessionDictionary,
      advancedBookingDays,
      unavailableDates: ["5 Oct 2020"],
      targets: {
        sessionDateId: "js-session_dates",
        sessionTimeId: "js-session_times",
      }
    });
    app.showAvailableDates();
    app.listen();

    // poor man tests
    //console.log('start date', app.startDate);
    //app.unavailableDates = ["1 Oct 2020", "3 Oct 2020"];
    //console.log('available dates', app.availableDates(app.startDate));
    //console.log('available times', app.availableTimes(SessionDictionary['Sun']));
  </script>
  <script>
    const form = document.getElementById("js-new_booking_form");
    form.addEventListener("submit", (eventData) => {
      eventData.preventDefault();

      const originalText = form.submit.value;

      form.submit.disabled = true;
      form.submit.style.cssText = 'background-color: #137752';
      form.submit.value = "Processing...";

      fetch(form.action, {
        method: "POST",
        body: new FormData(form),
      })
        .then(response => response.json())
        .then(result => alert(result.body.message))
        .finally(() => {
          form.submit.disabled = false;
          form.submit.style.cssText = '';
          form.submit.value = "Thank You!";
          setTimeout(() => form.submit.value = originalText, 1500);
        });
    });
  </script>
</body>
</html>
